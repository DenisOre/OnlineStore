@model OnlineStore.Models.Category
@{
    ViewData["Title"] = "Редактирование категории";
    Layout = "/Views/Shared/_LayoutEmpty.cshtml";
}

<form asp-action="administratorEditCategory" asp-controller="administratorCategories" asp-route-id="@Model.Id" method="post" class="mt-3 col-4 container justify-content-center enter__form">
    <p class="h3 text-center">Добавление категории</p>
    <div class="mb-3">
        <label asp-for="Id" class="form-label">Id</label>
        <input type="text" class="form-control" disabled id="Id" asp-for="Id" value="@Model.Id">
    </div> 
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Наименование</label>
        <input type="text" class="form-control" required id="Name" asp-for="Name" value="@Model.Name">
    </div>    
    <div class="d-flex justify-content-center">
       <input type="submit" class="btn btn-success mb-3 col-4" value="Сохранить"/>
       <input type="button" class="btn btn-danger ms-2 mb-3 col-4" value="Отмена" onclick="location.href='@Url.Action("AdministratorCategories","AdministratorCategories")';"/>
    </div>
</form>
