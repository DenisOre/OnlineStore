@{
    ViewData["Title"] = "Добавление производителя";
    Layout = "/Views/Shared/_LayoutEmpty.cshtml";
}

<form asp-action="AdministratorAddManufacturer" asp-controller="AdministratorManufacturers" class="mt-3 col-4 container justify-content-center enter__form">
    <p class="h3 text-center">Добавление производителя</p>
    <div class="mb-3">
        <label for="Name" class="form-label">Наименование</label>
        <input type="text" class="form-control" required id="Name" name="Name" placeholder="Введите название производителя"/>
        <p class="ErrorMessage">@ViewBag.ErrorName</p>
    </div>    
    <div class="d-flex justify-content-center">
       <input type="submit" class="btn btn-success mb-3 col-4" value="Сохранить"/>
       <input type="submit" class="btn btn-danger ms-2 mb-3 col-4" value="Отмена" onclick="location.href = '@Url.Action("AdministratorManufacturers","AdministratorManufacturers")';"/>
    </div>
</form>
