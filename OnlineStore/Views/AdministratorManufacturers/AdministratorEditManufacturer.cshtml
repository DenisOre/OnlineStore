@model OnlineStore.Models.Manufacturer
@{
    ViewData["Title"] = "Редактирование производителя";
    Layout = "/Views/Shared/_LayoutEmpty.cshtml";
}

<form asp-action="AdministratorEditManufacturer" asp-controller="AdministratorManufacturers" asp-route-id="@Model.Id" class="mt-3 col-4 container justify-content-center enter__form">
    <p class="h3 text-center">Редактирование производителя</p>
    <div class="mb-3">
        <label for="Id" class="form-label">Id</label>
        <input type="text" class="form-control" disabled id="Id" name="Id" value="@Model.Id"/>
    </div>   
    <div class="mb-3">
        <label for="Name" class="form-label">Наименование</label>
        <input type="text" class="form-control" required id="Name" name="Name" value="@Model.Name"/>
        
    </div>    
    <div class="d-flex justify-content-center">
       <input type="submit" class="btn btn-success mb-3 col-4" value="Сохранить"/>
       <input type="submit" class="btn btn-danger ms-2 mb-3 col-4" value="Отмена" onclick="location.href = '@Url.Action("AdministratorManufacturers","AdministratorManufacturers")';"/>
    </div>
</form>
