@model List<OnlineStore.Models.Role>
@{
    ViewData["Title"] = "Добавление пользователя";
    Layout = "/Views/Shared/_LayoutEmpty.cshtml";
}

<form asp-action="AdministratorAddUser" asp-controller="AdministratorUsers" class="mt-3 col-4 container justify-content-center enter__form">
    <p class="h3 text-center">Добавление пользователя</p>
    <div class="mb-3">
        <label for="Name" class="form-label">Имя</label>
        <input type="text" class="form-control" required id="Name" name="Name" placeholder="Введите имя">
    </div>
    <div class="mb-3">
        <label for="Surname" class="form-label">Фамилия</label>
        <input type="text" class="form-control" required id="Surname" name="Surname" placeholder="Введите фамилию">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" required id="Email" name="Email" placeholder="Введите адрес электронной почты">
        <p class="ErrorMessage">@ViewBag.ErrorEmail</p>
    </div>
    <div class="mb-3">
        <label for="Phone" class="form-label">Телефон</label>
        <input type="tel" class="form-control" required id="Phone" name="Phone" placeholder="Введите номер телефона">
    </div>
    <div class="mb-3">
        <label for="Password" class="form-label">Пароль</label>
        <input type="password" class="form-control" required id="Password" name="Password" placeholder="Введите пароль">
    </div>
    <div class="mb-3">
        <label for="PasswordRepeat" class="form-label">Повторите пароль</label>
        <input type="password" class="form-control" required id="PasswordRepeat" name="PasswordRepeat" placeholder="Введите пароль еще раз">
    </div>
    <div class="mb-3">
        <label for="Role" class="form-label">Роль</label>
        <select class="form-select" required id="Role" name="Role">
            <option selected disabled>Выберите права пользователя</option>
            @for(int i = 0; i < Model.Count; i++)
            {
                <option value="@Model[i].Name">@Model[i].Name</option>
            }
        </select>
    </div>
    <div class="d-flex justify-content-center">
       <input type="submit" class="btn btn-success mb-3 col-4" value="Сохранить"/>
       <input type="submit" class="btn btn-danger ms-2 mb-3 col-4" value="Отмена" onclick="    location.href = '@Url.Action("AdministratorUsers","AdministratorUsers")';" />
    </div>

</form>
