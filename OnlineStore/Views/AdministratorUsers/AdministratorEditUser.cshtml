@model OnlineStore.Models.UserEditViewModel
@{
    ViewData["Title"] = "Редактирование пользователя";
    Layout = "/Views/Shared/_LayoutEmpty.cshtml";
}


<form asp-action="AdministratorEditUser" asp-controller="AdministratorUsers" asp-route-id="@Model.User.Id" class="mt-3 col-4 container justify-content-center enter__form">
    <p class="h3 text-center">Добавление пользователя</p>
    <div class="mb-3">
        <label for="Name" class="form-label">Имя</label>
        <input type="text" class="form-control" required id="Name" name="Name" value="@Model.User.Name">
    </div>
    <div class="mb-3">
        <label for="Surname" class="form-label">Фамилия</label>
        <input type="text" class="form-control" required id="Surname" name="Surname" value="@Model.User.Surname">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" required id="Email" name="Email" value="@Model.User.Email">
        <p class="ErrorMessage">@ViewBag.ErrorEmail</p>
    </div>
    <div class="mb-3">
        <label for="Phone" class="form-label">Телефон</label>
        <input type="tel" class="form-control" required id="Phone" name="Phone" value="@Model.User.Phone">
    </div>
    <div class="mb-3">
        <label for="Password" class="form-label">Пароль</label>
        <input type="password" class="form-control" required id="Password" name="Password" value="@Model.User.Password">
    </div>
    <div class="mb-3">
        <label for="PasswordRepeat" class="form-label">Повторите пароль</label>
        <input type="password" class="form-control" required id="PasswordRepeat" name="PasswordRepeat" value="@Model.User.Password">
    </div>
    <div class="mb-3">
        <label for="Role" class="form-label">Роль</label>
        <select class="form-select" required id="Role" name="Role">
            <option selected disabled>Выберите права пользователя</option>
            @for(int i = 0; i < Model.Roles.Count; i++)
            {
                <option value="@Model.Roles[i].Name">@Model.Roles[i].Name</option>
            }
        </select>
    </div>
    <div class="d-flex justify-content-center">
       <input type="submit" class="btn btn-success mb-3 col-4" value="Сохранить"/>
       <input type="submit" class="btn btn-danger ms-2 mb-3 col-4" value="Отмена" onclick="    location.href = '@Url.Action("AdministratorUsers","AdministratorUsers")';" />
    </div>

</form>