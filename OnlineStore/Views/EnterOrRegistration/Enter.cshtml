
@model String
@{
    ViewData["Title"] = "Вход";
    Layout = "/Views/Shared/_LayoutEmpty.cshtml";
}

<form asp-action="enter" asp-controller="enterOrRegistration" method="post" class="mt-3 col-4 container justify-content-center enter__form">
    <p class="h3 text-center enter_header">Вход в личный кабинет</p>
    <div class="mb-3">
        <label for="EmailEnter" class="form-label">Email</label>
        <input type="email" class="form-control" id="EmailEnter" name="EmailEnter" placeholder="Введите адрес электронной почты">
    </div>
    <div class="mb-3">
        <label for="PasswordEnter" class="form-label">Пароль</label>
        <input type="password" class="form-control" id="PasswordEnter" name="PasswordEnter" placeholder="Введите пароль">
    </div>
    <input type="submit" class="btn enter__btn mb-3 col-8 offset-2" value="Войти"/>
    <div class="mt-3 col-10 container justify-content-center text-center">
        <p class="ErrorMessage">@ViewBag.ErrorMessage</p>
    </div>
</form>

<div class="mt-3 col-4 container justify-content-center text-center registration_a">
    <a href="/EnterOrRegistration/Registration">Нет личного кабинета? Перейти к регистрации</a>
</div>




